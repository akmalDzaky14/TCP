package tugasPertama;

public class PolaFibonacci {
	public static void main(String[] args) {
        int n = 5; // Jumlah baris pola Fibonacci

        cetakPolaFibonacci(n);
    }

    public static void cetakPolaFibonacci(int n) {
        int[] fibonacci = hitungDeretFibonacci(n);
        int len = fibonacci.length;

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                if (i == j || i + j == n - 1) {
                    System.out.print(fibonacci[Math.min(i, j)] + "\t");
                } else {
                    System.out.print("\t");
                }
            }
            System.out.println();
        }
    }

    public static int[] hitungDeretFibonacci(int n) {
        int[] fibonacci = new int[n];

        fibonacci[0] = 1;
        fibonacci[1] = 1;

        for (int i = 2; i < n; i++) {
            fibonacci[i] = fibonacci[i - 1] + fibonacci[i - 2];
        }

        return fibonacci;
    }
}
