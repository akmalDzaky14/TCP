package tugasPertama;

public class Fibonacci {

	public static void main(String[] args) {
		int n = 4;
		System.out.println("Nth Fibonacci number: " + A(n));

		// Combine the function tampilkanGanjilKeN with the function display Fibonacci
		// that has been combined with a symmetrical or palindromic pattern.
		// so change tampilkanGanjilKeN to display Nth Fibonacci that has been combined
		// with a symmetrical or palindromic pattern
		displayNthFibonacci(n);
	}

	public static int A(int n) {
		// Fibonacci dengan fungsi rekursif
		if (n == 0 || n == 1)
			return 1;
		else
			return A(n - 1) + A(n - 2);
	}

	public static void displayNthFibonacci(int n) {
		int j = (n / 2) + 1;
		if ((n % 2) == 0 || n <= 3) {
			System.out.print("Nilai harus ganjil dan lebih dari 3");
		} else {
			// Pola Simetris atau Palindromik
			// bagian pertama
			for (int i = 0; i < j; i++) {
				int fib = A(i);
				System.out.print(fib + " ");
			}
			// bagian kedua
			for (int i = j - 2; i >= 0; i--) {
				int fib = A(i);
				System.out.print(fib + " ");
			}
			// get the last number
			int lastNumber = Integer.parseInt(System.console().readLine());
			System.out.println("The Nth Fibonacci number is: " + lastNumber);
		}
	}
}
