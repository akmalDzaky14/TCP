package tugasPertama;

import java.util.Scanner;

public class Soal_2 {

	public static void main(String[] args) {
//		int n;
//		try (Scanner inputUser = new Scanner(System.in)) {
//			System.out.print("mengambil nilai fibonnaci ke - :");
//			n = inputUser.nextInt();
//		}
		System.out.println("Fibonacci:");
		Soal_2_A(9);
		System.out.println("\nPola Simetris:");
		Soal_2_B_1(9);
		System.out.println("\nDeret Fibonacci dan Pola Simetris:");
		Soal_2_B_2(7);
		System.out.println("\nDeret Fibonacci dan Array:");
		Soal_2_C(9);

	}

	public static void Soal_2_A(int n) {
		// Deret Fibonnaci
		int f_n, f_n_1, f_n_2;
		f_n_2 = 0;
		f_n_1 = 1;
		f_n = 1;
		for (int i = 1; i <= n; i++) {
			System.out.print(f_n + " ");
			f_n = f_n_1 + f_n_2;
			f_n_2 = f_n_1;
			f_n_1 = f_n;
		}
	}

	public static void Soal_2_B_1(int n) {
		// Pola Simetris atau Palindromik
		if ((n % 2) == 0) {
			System.out.println("Angka Harus Ganjil");
		} else {
			for (int j = 1; j <= n; j++) {
				System.out.print(j + " ");
			}
			for (int j = n - 1; j >= 1; j--) {
				System.out.print(j + " ");
			}
		}
	}

	public static void Soal_2_B_2(int n) {
		int j = (n / 2) + 1;
		if ((n % 2) == 0 || n <= 3) {
			System.out.print("Nilai harus ganjil dan lebih dari 3");
		} else {
			test(j);
		}
	}

	private static void Soal_2_C(int n) {
		short x = 1;
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				if ((i == j) || (i + j) == n - 1) {
					test(x);
//					System.out.print(ouput);
				} else {
					System.out.print("  ");
				}
				x++;
			}
			x = 1;
			System.out.println();

		}
	}

	private static void test(int j) {
		// bagian pertama
		for (int i = 0; i < j; i++) {
			int fib = B2(i);
			System.out.print(fib + " ");
		}
		// bagian kedua
		for (int i = j - 2; i >= 0; i--) {
			int fib = B2(i);
			System.out.print(fib + " ");
		}
	}

	public static int DeretFibonacciKeN(int n) {
		// Deret Fibonnaci
		if (n <= 1) {
			return n;
		} else {
			int a = 0;
			int b = 1;
			int fibonacci = 0;

			for (int i = 2; i <= n; i++) {
				fibonacci = a + b;
				a = b;
				b = fibonacci;
			}

			return fibonacci;
		}
	}

	public static int B2(int n) {
		// Pola Simetris atau Palindromik dan Fibonacci dengan fungsi rekursif
		if (n == 0 || n == 1)
			return 1;
		else
			return B2(n - 1) + B2(n - 2);
	}
}
